            </tr>

            {% for boxeur in boxeurs %}
                <tr>
                    <td>{{ boxeur.id }}</td>
                    <td>
                        {# <div id="divImgAdmin">
                            <img src="{{ asset('uploads/'~article.image) }}" alt="{{ article.title }}" />
                        </div> #}
