{% extends 'admin/base.html.twig' %}

    {% block title %}
        Admin : Les Boxeurs
    {% endblock %}



{% block body %}

    <h1 class="center paddH1Admin">Les Boxeurs </h1>

    <section>


        <table>
            <tr>
                <td>Id</td>
                <td>Image</td>
                <td>Nom</td>
                <td>Prenom</td>
                <td>Date Naissance</td>
                <td>Description</td>
                {# <td colspan="2">Catégorie</td> #}
