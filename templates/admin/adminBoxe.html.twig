                    <td>{{ boxeur.nom }}</td>
                    <td>{{ boxeur.prenom }}</td>
                    <td>{{ boxeur.DateNaissance | date('d-m-Y') }}</td>
                    <td>{{ boxeur.description }}</td>
                    {# <td>{{ boxeur.Pesers }}</td> #}

                    {# <td>{{ article.category ? article.category.title : 'sans catégorie' }}</td> #}
                    {# <td>
                        {% if article.isPublished %}
                            <p>Oui</p>
                        {% else %}
                            <p>Non</p>
                        {% endif %}
                    </td> #}
                    <td>
                        <a class="black" href="">Modifier</a>

                        <p class="js-admin-article-delete">Supprimer</p>

                        <div class="admin-article-popup-delete">
                            <p>Voulez vous vraiment supprimer ?</p>

                            <a href="">Supprimer</a>
                        </div>
                    </td>

                </tr>
            {% endfor %}
        </table>


    </section>

{% endblock %}